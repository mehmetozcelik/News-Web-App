
@{
    ViewBag.Title = "Ana Kategori Guncelle - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using Haber.Models

@model AnaKategori
<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            <p>Şuan<b> @Model.Adi</b> Kategorisini düzenliyorsunuz</p>
        </header>

        <div class="panel-body">
            <form role="form" method="post" action="AnaKategoriGuncelle">
                <div class="form-group">
                    <label for="exampleInputEmail1">Ana Kategori Adı</label>
                    <input type="text" class="form-control" id="validationDefault01" maxlength="15" value="@Model.Adi" name="Adi" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Açıklama</label>
                    <input type="text" class="form-control" id="validationDefault01" maxlength="100" value="@Model.Aciklama" name="Aciklama" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Renk Seçniz</label>
                            <select name="Renk" class="form-control m-bot15">
                                <option value="green" @{if (Model.Renk == "green") { <text>selected</text>} }>Yeşil </option>
                                <option value="violet" @{if (Model.Renk == "violet") { <text>selected</text>} }>Mor</option>
                                <option value="blue" @{if (Model.Renk == "blue") { <text>selected</text>} }>Mavi</option>
                                <option value="orange" @{if (Model.Renk == "orange") { <text>selected</text>} }>Turuncu</option>
                            </select>
                </div>

                <button name="id" value="@Model.id" type="submit" class="btn btn-info">Kaydet</button>
            </form>

        </div>
    </section>
</div>