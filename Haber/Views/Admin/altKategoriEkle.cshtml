
@{
    ViewBag.Title = "Alt Kategori Ekle - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using Haber.Models

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            Yeni Alt Kategori Ekle
        </header>

        <div class="panel-body">
            <form role="form" method="post" action="AltKategoriEkle">
                <div class="form-group">
                    <label for="exampleInputPassword1">Ana Kategori Seçiniz</label>

                    <select name="AnaKategoriID" class="form-control m-bot15">
                        @foreach (AnaKategori item in ViewBag.anakategoriler)
                        {
                            <option value="@item.id">@item.Adi </option>
                        }
                    </select>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Alt Kategori Adı</label>
                    <input type="text" class="form-control" id="validationDefault01" name="Adi" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Açıklama</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" name="Aciklama">
                </div>
          

                <button type="submit" class="btn btn-info">Kaydet</button>
            </form>

        </div>
    </section>
</div>
