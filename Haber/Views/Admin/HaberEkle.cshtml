
@{
    ViewBag.Title = "Haber Ekle - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using Haber.Models

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            Yeni Haber Ekle
        </header>

        <div class="panel-body">
            <form role="form" method="post" action="HaberEkle" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputEmail1">Haber Başlığı</label>
                    <input type="text" class="form-control" id="validationDefault01" maxlength="90" name="Baslik" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Kısa Açıklama</label>
                    <input type="text" class="form-control" id="validationDefault01" maxlength="450"  name="KisaAciklama" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">İçerik</label>
                    <textarea class="form-control" rows="10" id="validationDefault01" maxlength="3950" name="Icerik" required></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Kategori Seçiniz</label>
                    <select name="KategoriID" class="form-control m-bot15">
                        @foreach (AltKategori item in ViewBag.altkategoriler)
                        {
                            <option value="@item.id">@item.Adi </option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="exampleInputFile">Resim Seçiniz</label>
                    <input type="file" id="validationDefault01" name="file" required>
                </div>

                <button type="submit" class="btn btn-info">Kaydet</button>
            </form>

        </div>
    </section>
</div>
