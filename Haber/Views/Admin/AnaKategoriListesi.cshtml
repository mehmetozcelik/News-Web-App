
@{
    ViewBag.Title = "Ana Kategori Listesi - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Haber.Models

<div class="row">
    <div class="col-lg-12">
        @{
            if (TempData["a"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>@TempData["a"]</strong>
                </div>
            }
        }
        <section class="panel">
            <header class="panel-heading">
                Ana Kategori Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>

                        <th><i class="icon-bullhorn"></i> Kategori Adi</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i> Açıklama</th>
                        <th><i class="icon-bookmark"></i> Renk</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AnaKategori item in ViewBag.Kategoriler)
                    {
                        <tr>

                            <td class="hidden-phone">@item.Adi</td>
                            <td>@item.Aciklama</td>

                            @{
                                if (item.Renk == "green") { <td>Yeşil</td>}
                                if (item.Renk == "violet") {<td>Mor</td>}
                                if (item.Renk == "blue") { <td>Mavi</td>}
                                if (item.Renk == "orange") {<td>Turuncu</td>}
                            }

                            <td>

                                <a href="AnaKategoriGuncelle/@item.id" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                                <a href="AnaKategoriSil/@item.id" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>

        </section>
    </div>
</div>
