
@{
    ViewBag.Title = "Haber Listesi - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using Haber.Models

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Haber Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="" icon-edit"></i> Başlık</th>
                        <th><i class="icon-bullhorn"></i> Kısa Açıklama</th>
                        <th><i class="icon-bookmark"></i> Eklenme Tarihi</th>
                        <th><i class="icon-bookmark"></i> Okunma Sayısı</th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Haber item in ViewBag.Haberlistesi)
                    {
                        <tr>
                            <td><a href="#">@item.Baslik</a></td>
                            <td class="hidden-phone">@item.KisaAciklama</td>
                            <td>@item.EklenmeTarihi</td>
                            <td>@item.OkunmaSayisi</td>
                            <td>
                              
                                <a href="HaberGüncelle/@item.id" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                                <a href="HaberSil/@item.id" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </section>
    </div>
</div>


