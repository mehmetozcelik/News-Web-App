
@{
    ViewBag.Title = "Yorum Listesi - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Haber.Models

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               Yorum Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>

                        <th>Adi</th>
                        <th>İçerik</th>
                        <th>Eklenme Tarihi</th>
                        <th>Haber</th>
                        <th>Onay</th>
                        <th>Sil</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Yorum yrm in ViewBag.TumYorumlar)
                    {
                        <tr>
                            <td>@yrm.Adi</td>
                            <td>@yrm.Icerik</td>
                            <td>@yrm.EklenmeTarihi</td>
                            <td><a href="/Home/HaberDetay/@yrm.HaberID" target="_blank" >@yrm.Haber.Baslik</a></td>

                            @if (yrm.Onay == false)
                            {
                                <td>
                                    <a href="YorumOnay/@yrm.id" class="btn btn-success btn-xs"><i class="icon-ok">  Onay</i></a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a href="YorumOnayGeri/@yrm.id" class="btn btn-primary btn-xs"><i class="icon-reply">  Geri Al</i></a>
                                </td>
                            }
                                <td>
                                    <a href="YorumSil/@yrm.id" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                                </td>
                            </tr>
                    }


                </tbody>
            </table>
        </section>
    </div>
</div>


