
@{
    ViewBag.Title = "Alt Kategori Güncelle - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using Haber.Models
@model AltKategori
<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            <p>Şuan <b>@Model.Adi </b> Alt Kategorisini düzenliyorsunuz !</p>
        </header>

        <div class="panel-body">
            <form role="form" method="post" action="AnaKategoriGuncelle">
                <div class="form-group">
                    <label for="exampleInputEmail1">Alt Kategori Adı</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" value="@Model.Adi" name="Adi">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Açıklama</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" value="@Model.Aciklama" name="Aciklama">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Ana Kategori Seçniz</label>
                    
                    <select name="AnaKategoriID" class="form-control m-bot15">
                        @foreach (AnaKategori item in ViewBag.AnaKategoriler)
                        {
                            if (item.id == Model.AnaKategori.id)
                            {
                                <option value="@item.id" selected>@item.Adi </option>
                            }
                            else
                            {
                                <option value="@item.id">@item.Adi </option>
                            }


                        }
                    </select>


                </div>

                <button name="id" value="@Model.id" type="submit" class="btn btn-info">Kaydet</button>
            </form>

        </div>
    </section>
</div>