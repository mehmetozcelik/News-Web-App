
@{
    ViewBag.Title = "Şifre Değiştir - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            Şifre Değiştirme
        </header>

        <div class="panel-body">
            <form role="form" method="post" action="SifreDegistir">
                <div class="form-group">
                    <input type="text" class="form-control hidden" id="exampleInputEmail1" name="UserName" value="@User.Identity.Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Eski Şifre</label>
                    <input type="text" class="form-control" id="validationDefault01" maxlength="15" name="EskiSifre" required>
                </div>
                
                <div class="form-group">
                    <label for="exampleInputPassword1">Yeni Şifre</label>
                    <input type="text" class="form-control" id="validationDefault01" maxlength="15" name="YeniSifre" required>
                </div>

                <button type="submit" class="btn btn-info">Şifreyi Değiştir</button>
            </form>
            <br />
            @{
                if (TempData["d"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>@TempData["d"]</strong>
                    </div>
                }
            }
        </div>
    </section>
</div>

