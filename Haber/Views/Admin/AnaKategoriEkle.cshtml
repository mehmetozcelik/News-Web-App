
@{
    ViewBag.Title = "Ana Kategori Ekle - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Haber.Models

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
           Yeni Ana Kategori Ekle
        </header>

        <div class="panel-body">
            <form role="form" method="post" action="AnaKategoriEkle">
                <div class="form-group">
                    <label for="exampleInputEmail1">Ana Kategori Adı</label>
                    <input type="text" class="form-control" id="validationDefault01"  maxlength="15" name="Adi" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Açıklama</label>
                    <input type="text" class="form-control" id="validationDefault01" maxlength="100"name="Aciklama" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Renk Seçniz</label>

                    <select name="Renk" class="form-control m-bot15">
                        <option value="green">Yeşil </option>
                        <option value="violet">Mor</option>
                        <option value="blue">Mavi</option>
                        <option value="orange">Turuncu</option>
                    </select>

                </div>

                <button type="submit" class="btn btn-info">Kaydet</button>
            </form>

        </div>
    </section>
</div>
