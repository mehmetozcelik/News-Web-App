
@{
    ViewBag.Title = "Alt Kategori Listesi - Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Haber.Models

<div class="row">
    <div class="col-lg-12">
        @{
            if (TempData["b"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>@TempData["b"]</strong>
                </div>
            }
        }
        <section class="panel">
            <header class="panel-heading">
                Alt Kategori Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                       
                        <th><i class="icon-bullhorn"></i> Kategori Adi</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i> Açıklama</th>
                        <th><i class="icon-bookmark"></i> Ana Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AltKategori item in ViewBag.Kategoriler)
                    {
                        <tr>
                        
                            <td class="hidden-phone">@item.Adi</td>
                            <td>@item.Aciklama</td>
                            <td>@item.AnaKategori.Adi</td>

                            
                            <td>
                             
                                <a href="AltKategoriGuncelle/@item.id" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                                <a href="AltKategoriSil/@item.id" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </section>
    </div>
</div>

