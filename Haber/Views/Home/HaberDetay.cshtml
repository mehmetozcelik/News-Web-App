
@{
    ViewBag.Title = "Haber Detay";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@using Haber.Models
@model Haber

<div class="container">
    <div class="content-inner">
        <div class="row">
            <div class="col-lg-9">
                <div id="primary" class="content-area">
                    <main id="main" class="site-main" role="main">

                        <article id="post-638" class="post-638 post type-post status-publish format-standard has-post-thumbnail hentry category-computer category-gaming tag-interview-questions tag-sap-technical tag-technical-difficulties color-blue">
                            <header class="entry-header">
                                <h1 class="entry-title">@Model.Baslik</h1>
                                <div class="entry-meta">
                                    <span class="cat-links"><i class="fa fa-folder"></i> <a href="/Home/KategoriDetay/@Model.AltKategori.AnaKategori.id" rel="category tag">@Model.AltKategori.AnaKategori.Adi</a></span><span class="posted-on"><i class="fa fa-clock-o"></i> <span class="entry-date published">@Model.EklenmeTarihi</span><span class="updated sr-only">@Model.EklenmeTarihi</span></span><span class="byline"> <i class="fa fa-user"></i> <span class="author vcard">@Model.Yazar</span></span>
                                </div>
                            </header>
                            <div class="entry-thumbnail"><img width="770" height="300" src="@Model.Resim.Url" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="" srcset="@Model.Resim.Url 770w, @Model.Resim.Url 230w, @Model.Resim.Url 640w" sizes="(max-width: 770px) 100vw, 770px"></div>

                            <div class="row">
                                <div class="entry-content col-md-12">
                                    <br />
                                    <br />
                                    <p>
                                        @Model.Icerik
                                    </p>
                                </div>
    
                            </div>
                        </article>


                        <section id="comments" class="comments">
                            <h3 class="comments-title">
                              Yorumlar
                            </h3>

                            <div class="comment-list">
                                @foreach (Yorum yrm in ViewBag.yorumlar)
                                {
                                    <div id="comment-176" class="comment byuser comment-author-riva-moser even thread-even depth-1">
                                        <article id="div-comment-176" class="comment-body">
                                            <footer class="comment-meta">
                                                <div class="comment-author vcard">
                                                    <img class="avatar avatar-32 photo" src="~/Content/Admin/img/blank-profile-picture-973460_960_720.png" height="32" width="32"/>
                                                    <b class="fn">@yrm.Adi</b> <span class="says"> Diyor ki ;</span>
                                                </div><!-- .comment-author -->
                                                <div class="comment-metadata">
                                                   
                                                        <time datetime="2011-03-18T00:00:00+00:00">
                                                            @yrm.EklenmeTarihi
                                                        </time>
                                                  
                                                </div><!-- .comment-metadata -->
                                            </footer><!-- .comment-meta -->
                                            <div class="comment-content">
                                                <p>@yrm.Icerik</p>
                                            </div><!-- .comment-content -->
          
                                        </article><!-- .comment-body -->
                                    </div>
                                }
                                <!-- #comment-## -->

                            </div>
                            <div id="respond" class="comment-respond">
                                <h3 id="reply-title" class="comment-reply-title">Yorum Yap <small><a rel="nofollow" id="cancel-comment-reply-link" href="/Content/Home/index.html#respond" style="display:none;">Cancel reply</a></small></h3>	
                            		<form action="/Home/YorumYap" method="post" class="comment-form">
                                    <p class="comment-form"><label for="comment">Yorum</label>
                                        <input class="hidden" name="id" value="@Model.id" />
                                        <textarea id="validationDefault01" name="comment" class="form-control" rows="5" required></textarea></p><p class="comment-form-author">
                                        <label for="author">Adınız</label> <span> (Bu alanı boş bırakırsanız adınız gizli kullanıcı olarak görünür.) </span>
                                        <input name="author" type="text" class="form-control"></p>
                                        <p class="form-submit">
                                       <input type="submit" class="btn btn-default">
                                     </p>
                                </form>
                            </div><!-- #respond -->

                        </section>
                    </main>
                </div>
            </div>
            <div class="col-lg-3">

                @{
                    Html.RenderAction("SagSlider", "Home");
                }
            </div>
        </div>
    </div>

</div>
